{
    "name": "__MSG_appName__",
    "version": "0.0.3",
    "manifest_version": 2,
    "description": "__MSG_appDescription__",
    "icons": {
        "16": "images/icon-16.png",
        "128": "images/icon-128.png"
    },
    "default_locale": "en",
    "background": {
        "scripts": [
            "bower_components/jquery/dist/jquery.min.js",
            "bower_components/uuid/uuid.js",
            "scripts/modules/indetifier.js",
            "scripts/modules/connection.js",
            "scripts/modules/notifier.js",
            "scripts/modules/recognizer.js",
            "scripts/modules/logger.js",
            "scripts/modules/usage_logger.js",
            "scripts/background.js"
        ]
    },
    "browser_action": {
        "default_icon": {
            "19": "images/icon_active.png",
            "38": "images/icon-38.png"
        },
        "default_title": "Tabrec",
        "default_popup": "popup.html"
    },
    "options_page": "options.html",
    "permissions": [
        "alarms",
        "history",
        "identity",
        "notifications",
        "storage",
        "tabCapture",
        "tabs",
        "http://tabber.fiit.stuba.sk/*",
        "http://localhost:9292/*"
    ]
}
